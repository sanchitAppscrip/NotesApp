<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppProgressBarAppColor" parent="AppTheme">
        <item name="colorAccent">@color/design_default_color_primary</item>
    </style>

    <style name="AppProgressBar" parent="AppTheme">
        <item name="colorAccent">@color/design_default_color_primary</item>
    </style>

    <style name="TextStyle1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color of box stroke -->
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:radius">6dp</item>
        <!-- Text appearance of floating hint-->
        <item name="hintTextAppearance">@style/AppTextInputLayoutHint</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/AppTextInputLayoutError</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <style name="AppTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <!-- Text size of floating hint -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextInputLayoutError" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="AppTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Color of hint in normal mode if hintEnabled is false-->
        <item name="android:textColorHint">@color/color_divider</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">12dp</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>

    </style>
</resources>